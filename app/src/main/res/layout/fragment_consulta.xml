<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="?attr/actionBarSize"
    tools:context="com.sucen.flebweblv.ConsultaFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Módulo:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <RadioGroup
        android:id="@+id/consRgModulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/consRbAmbiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manejo Ambiental" />

        <RadioButton
            android:id="@+id/consRbCaptura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Captura Flebotomíneo" />

        <RadioButton
            android:id="@+id/consRbInquerito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inquerito Canino" />

        <RadioButton
            android:id="@+id/consRbTratamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tratamento Químico" />
    </RadioGroup>

    <Button
        android:id="@+id/consBtConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Consultar" />

    <TextView
        android:id="@+id/textView76"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Registros a Excluir:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <ToggleButton
        android:id="@+id/tbTodos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Excluir"
        android:textOff="Enviados"
        android:textOn="Todos os registros" />

    <Button
        android:id="@+id/btLimpa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/trash"
        android:paddingTop="20dp"
        android:paddingRight="60sp"
        android:paddingBottom="20dp"
        android:text="@string/limpBotao"
        android:textSize="@dimen/font_small" />

</LinearLayout>
